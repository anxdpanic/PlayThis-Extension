{
  "manifest_version": 2,

  "name": "PlayThis",
  "description": "send-to PlayThis contextmenu, send video urls to PlayThis addon in Kodi for resolving and playback",
  "version": "0.0.0.2",
  "default_locale": "en",

  "icons": {
    "128": "images/icon_128.png",
    "48": "images/icon_48.png",
    "16": "images/icon_16.png"
  },

  "options_page": "html/settings.html",

  "browser_action": {
    "default_icon": {
      "38": "images/icon_38.png",
      "19": "images/icon_19.png"
    },
    "default_popup": "html/settings.html"
  },

  "web_accessible_resources": [
    "images/*.png",
    "css/*.css",
    "js/*.js",
    "html/*.html"
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "background",
    "contextMenus",
    "storage"
  ]
}
