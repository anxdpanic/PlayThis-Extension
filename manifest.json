{
  "manifest_version": 2,

  "name": "PlayThis",
  "short_name": "PlayThis",
  "description": "Adds send-to shortcuts to urlresolver supported and direct media links and attempts playback of media via PlayThis add-on in Kodi",
  "version": "1.0.0",
  "default_locale": "en",
  "options_page": "html/settings.html",

  "icons": {
    "128": "images/icon_128.png",
    "48": "images/icon_48.png",
    "16": "images/icon_16.png"
  },

  "web_accessible_resources": [
    "images/*.png",
    "css/*.css",
    "js/*.js",
    "json/*.json",
    "html/*.html"
  ],

  "browser_action": {
    "default_icon": {
      "38": "images/icon_38.png",
      "19": "images/icon_19.png"
    },
    "default_popup": "html/settings.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/parse.js"
      ],
      "all_frames": true
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ]
}
